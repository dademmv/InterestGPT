{
  "openapi": "3.0.0",
  "info": {
    "title": "Interest Edufin Knowledge API",
    "version": "1.0.0",
    "description": "API che restituisce la knowledge base aggiornata dell'associazione Interest Edufin ETS."
  },
  "servers": [
    {
      "url": "https://interestgpt.onrender.com",
      "description": "API live su Render per InterestGPT"
    }
  ],
  "paths": {
    "/knowledge": {
      "get": {
        "summary": "Ottieni la knowledge base aggiornata",
        "operationId": "getKnowledge",
        "responses": {
          "200": {
            "description": "Risposta con dati strutturati",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "fundraising": {
                      "type": "object",
                      "properties": {
                        "priorita": {
                          "type": "string"
                        },
                        "note": {
                          "type": "string"
                        }
                      }
                    },
                    "governance": {
                      "type": "object",
                      "properties": {
                        "presidente": {
                          "type": "string"
                        },
                        "CTS": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "progetti": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "nome": {
                            "type": "string"
                          },
                          "partner": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          },
                          "target": {
                            "type": "string"
                          },
                          "note": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}